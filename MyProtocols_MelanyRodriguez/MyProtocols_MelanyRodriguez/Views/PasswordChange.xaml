<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProtocols_MelanyRodriguez.Views.PasswordChange">
    <ContentPage.Content>
        <StackLayout>
            <Entry  x:Name="TxtPassword" Placeholder="Password" Keyboard="Text" ClearButtonVisibility="WhileEditing">
                <Entry.Triggers>
                    <Trigger TargetType="Entry" Property="IsFocused" Value="True">
                        <Setter Property="BackgroundColor" Value="LavenderBlush"/>
                        <Setter Property="TextColor" Value="Gold"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="FontAttributes" Value="Bold"/>
                    </Trigger>
                </Entry.Triggers>
            </Entry>

            <Button x:Name="BtnChange" Text="Change" CornerRadius="15" BackgroundColor="Gold" FontSize="20" Clicked="BtnChange_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>